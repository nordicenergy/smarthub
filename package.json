{
    "name": "root",
    "private": true,
    "devDependencies": {
        "@openzeppelin/cli": "2.7.1",
        "@openzeppelin/contracts-ethereum-package": "2.4.0",
        "@openzeppelin/upgrades": "2.7.1",
        "@types/chai": "4.2.9",
        "@types/dotenv": "6.1.1",
        "@types/mocha": "7.0.1",
        "@types/node": "12.12.21",
        "@typescript-eslint/eslint-plugin": "2.21.0",
        "@typescript-eslint/parser": "2.21.0",
        "chai": "4.2.0",
        "concurrently": "5.1.0",
        "cross-env": "7.0.0",
        "dotenv": "8.2.0",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "14.0.0",
        "eslint-config-prettier": "6.10.0",
        "eslint-plugin-import": "2.20.1",
        "eslint-plugin-prettier": "3.1.2",
        "ganache-cli": "6.8.2",
        "husky": "4.2.3",
        "lerna": "3.20.2",
        "lint-staged": "10.0.8",
        "mocha": "7.1.0",
        "prettier": "1.19.1",
        "shx": "0.3.2",
        "solc": "0.5.16",
        "truffle": "5.1.15",
        "ts-node": "8.6.2",
        "typescript": "3.8.3",
        "typescript-json-schema": "0.42.0",
        "wait-on": "4.0.1"
    },
    "scripts": {
        "build": "yarn build:static && yarn build:ts",
        "build:ui": "lerna run build --scope @smarthub/smarthub-ui-core --stream",
        "lint": "lerna run lint --parallel --stream",
        "lint-fix": "lerna run lint-fix --parallel --stream",
        "clean": "lerna run clean --parallel",
        "build:user-device-registry-smarthub": "lerna run build --scope @smarthub/user-registry build --scope @smarthub/device-registry build --scope @smarthub/smarthub --parallel",
        "build:static": "lerna run build:static --parallel",
        "build:ts": "lerna run build:ts --stream",
        "run:demo": "lerna run start --scope @smarthub/migrations --stream",
        "run:backend": "lerna run start --scope @smarthub/smarthub-backend --stream",
        "run:ui": "lerna run start --scope @smarthub/smarthub-ui-core --stream",
        "run:smarthub": "lerna run start-all --scope @smarthub/smarthub-ui --scope @smarthub/migrations --parallel",
        "run:ganache": "ganache-cli -m \"chalk park staff buzz chair purchase wise oak receive avoid avoid home\" -l 8000000 -e 1000000 -a 40 -h 0.0.0.0",
        "run:simulator": "lerna run start --scope @smarthub/solar-simulator --stream",
        "run:matcher": "lerna run start --scope @smarthub/market-matcher --stream",
        "run:event-listener": "lerna run start --scope @smarthub/event-listener --stream",
        "run:mock-data": "lerna run deploy-mock-readings --scope @smarthub/solar-simulator --stream",
        "run:exchange": "lerna run start --scope @smarthub/exchange --stream",
        "test": "yarn test:ui && lerna run test:concurrent --stream --parallel --since master",
        "test:serial": "lerna run test:concurrent --stream && yarn test:ui",
        "test:ui": "lerna run test --scope @smarthub/smarthub-ui-core --stream --since master",
        "test:contracts": "lerna run test:contracts --scope @smarthub/device-registry --scope @smarthub/market --scope @smarthub/smarthub --scope @smarthub/user-registry --stream --parallel",
        "test:migrations": "lerna run test:all --scope @smarthub/migrations --stream",
        "test:backend": "lerna run --scope @smarthub/smarthub-backend --stream test",
        "test:device-registry": "lerna run --scope @smarthub/device-registry --stream test:concurrent",
        "test:market": "lerna run --scope @smarthub/market --stream test:concurrent",
        "test:smarthub": "lerna run --scope @smarthub/smarthub --stream test:concurrent",
        "test:matcher": "lerna run test:concurrent --scope @smarthub/market-matcher --stream",
        "test:user-registry": "lerna run test:concurrent --scope @smarthub/user-registry --stream",
        "test:event-listener": "lerna run test:concurrent --scope @smarthub/event-listener --stream",
        "test:utils-general": "lerna run test --scope @smarthub/utils-general --stream",
        "test:ci:contracts": "lerna run --scope @smarthub/device-registry --scope @smarthub/issuer --scope @smarthub/smarthub --scope @smarthub/user-registry --scope @smarthub/market --scope @smarthub/utils-general --scope @smarthub/utils-general --scope @smarthub/market-matcher-core test:concurrent --since master --parallel --stream",
        "test:ci:contracts:deployment": "yarn test:migrations",
        "test:ci:apps": "lerna run --scope @smarthub/exchange --scope @smarthub/market-matcher --scope @smarthub/event-listener --scope @smarthub/smarthub-backend --scope @smarthub/migrations test:concurrent --since master --parallel --stream",
        "test:ci:ui": "yarn test:ui",
        "publish:canary": "lerna publish --yes --skip-git --exact --cd-version=prerelease --pre-dist-tag canary --preid=alpha.$TRAVIS_BUILD_NUMBER",
        "publish:release": "lerna version --create-release github --conventional-commits --exact --yes --message \"chore(release): publish /skip-deploy\" && lerna publish from-git --yes",
        "build:containers:canary": "lerna run build:container:canary --stream",
        "build:containers:release": "lerna run build:container:latest --stream"
    },
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": "12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lerna run --concurrency 1 --stream precommit"
        }
    }
}
